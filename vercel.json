{
    "version": 2,
    "builds": [
      { "src": "api/**/*.ts", "use": "@vercel/node" }
    ],
    "routes": [
      { "src": "/api/send-whatsapp", "dest": "/api/send-whatsapp.ts" }
    ],
    "env": {
      "TWILIO_ACCOUNT_SID": "@TWILIO_ACCOUNT_SID",
      "TWILIO_AUTH_TOKEN": "@TWILIO_AUTH_TOKEN",
      "WHATSAPP_FROM": "@WHATSAPP_FROM",
      "WHATSAPP_TO": "@WHATSAPP_TO"
    }
  }
  